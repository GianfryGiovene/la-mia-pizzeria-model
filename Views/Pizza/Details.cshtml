@model Pizza
@{
    
}


<div class="container text-dark">
    <h2>@Model.Name</h2>
    <div class="row">
        <div class="w-50">
            <img class="w-100" src="@Model.PhotoUrl"/>
        </div>
        <div class="w-50">
            <h3>Descrizione</h3>
            <p>@Model.Description</p>
            <h3>Prezzo</h3>
            <span>@Model.Price &euro;</span>
            
            <h3>Ingredienti</h3>
            @if(Model.IngredienteList.Count() > 0)
            {
                foreach(Ingrediente ing in Model.IngredienteList)
                {                
                    <span> @ing.Name</span>
                }
            }
            else
            {
                <span>-</span>
            }
    </div>
    <a  class="btn btn-danger mt-2 " href="@Url.Action("Index","Pizza")">Indietro</a>
</div>

